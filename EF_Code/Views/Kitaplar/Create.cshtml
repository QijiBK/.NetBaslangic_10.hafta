@model EF_Code.Models.Kitaplar
@{
    ViewData["Title"] = "Yeni Kitap Oluşturma";
}
<h1 class="display-3">Kitap Yaratma</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create">
            <div class="form-group">
                <div class="row col-sm-6">
                    <label asp-for="Isbn" class="control-label">Kitap Isbn</label>
                    <input type="text" asp-for="Isbn">
                </div>
                <div class="row col-sm-6">
                    <label asp-for="Ad" class="control-label">Kitap Ad</label>
                    <input type="text" asp-for="Ad">
                </div>
                <div class="row col-sm-6">
                    <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayısı</label>
                    <input type="text" asp-for="SayfaSayisi">
                </div>
                <div class="row col-sm-6">
                    <label asp-for="Stok" class="control-label">Stok Sayısı</label>
                    <input type="text" asp-for="Stok">
                </div>
                <div class="row col-sm-6">
                    <label asp-for="TurlerId" class="control-label">Tür</label>
                    <select asp-for="TurlerId" class="form-control" asp-items="ViewBag.TurlerId"></select>
                </div>
                <div class="row col-sm-6">
                    <label asp-for="YayinEvleriId" class="control-label">Yayınevleri</label>
                    <select asp-for="YayinEvleriId" class="form-control" asp-items="ViewBag.YayinEvleriId"></select>
                    
                </div>
                <div class="row col-sm-6">
                    <label asp-for="YazarlarId" class="control-label">Yazarlar</label>
                    <select asp-for="YazarlarId" class="form-control" asp-items="ViewBag.YazarlarId"></select>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-outline-success">
            </div>
        </form>
    </div>
</div>
<a class="btn btn-primary" asp-action="Index">Kitaplar'a Geri Dön</a>