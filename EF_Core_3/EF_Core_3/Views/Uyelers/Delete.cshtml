@model EF_Core_3.Models.Uyeler

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Silme İşlemi</h1>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Üyeler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ad Soyad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>
        <dt class = "col-sm-2">
            Cinsiyet
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cinsiyet)
        </dd>
        <dt class = "col-sm-2">
            Doğum Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DogumTarihi)
        </dd>
        <dt class = "col-sm-2">
            Telefon
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt class = "col-sm-2">
            Mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class = "col-sm-2">
            Üyelik Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyelikTarihi)
        </dd>
        <dt class = "col-sm-2">
            Üyelik Tipi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyelikTipi)
        </dd>
        <dt class = "col-sm-2">
            Tc No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class = "col-sm-2">
            Meslek
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meslek)
        </dd>
        <dt class = "col-sm-2">
            Eğitim Durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EgitimDurumu)
        </dd>
        <dt class = "col-sm-2">
            Ceza Durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CezaDurumu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Siteye Geri Dön</a>
    </form>
</div>
