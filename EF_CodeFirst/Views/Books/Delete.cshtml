@model Book
@{
    ViewData["Title"] = "Delete";
}
<h5>Delete Book</h5>
<hr>
<div class="">
Book ID:@Model.BookId
</div>
<div class="">
Book Name:@Model.BookName
</div>
<div class="">
Publication year:@Model.BookYearOfPublication
</div>
<div>
Edition Number:@Model.BookEditionNumber
</div>
<div>
Page Number:@Model.BookNumberOfPage
</div>
<div>
